<div class="row howtall shaade6">

  <div class="hidden-xs col-sm-4 col-lg-4 col-md-4 scroll shaade4">
 
      <div class="hidden-xs leftylocs">
        <h1>Log in with your email and password.</h1>
      </div>  
  </div>

  <div class="col-sm-8 col-lg-8 col-md-8 scroll shaade6">

      <div class="rightylocs">
			<%= form_for @user, {url: session_path, class: "form-group"} do |f| %>
				<%= f.text_field :email, class: "form-control", placeholder: "Your Email Address" %><br />
				<%= f.password_field :password, class: "form-control", placeholder: "Your Password" %><br />
				<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
				<%= f.submit "Log In", class:"btn btn-default" %>
			<% end %>
      </div>
  </div>

</div>
