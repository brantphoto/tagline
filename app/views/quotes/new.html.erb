<% catch(:done) do %>
	<% @location.quotes.each do |l| %>
		<% if l.user_id.to_s == current_user.id.to_s %>
			<% @already_quoted = true %>
			<% throw :done %>
		<% else %>
		<% end %>
	<% end %>
<% end %>


<% if @already_quoted == true %>
	<%= render 'noquote' %>
<% else %>
	<%= render 'quoteform' %>
<% end %> 

